<div class="toolbar row">
    <div class="col-md-12">
        {% if backButton %}
            <a href="{{ btn.link }}" class="btn btn-default">
                <i class="fa fa-angle-left"></i> {{ __('back') }}
            </a>
        {% endif %}

        {% if viewButton %}
            <a target="_blank" href='/{{ btn.link }}' class="btn btn-info">
                <i class="fa fa-eye"></i> {{ __('view') }}
            </a>
        {% endif %}

        {% if createButton %}
            <a href="{{ btn.link }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> {{ __('t_backend_table_template_btn_addnew') }}
            </a>
        {% endif %}

        {% if saveButton %}
            <button type="submit" id="saveForm" class="btn btn-success">
                <i class="fa fa-check"></i> {{ __('save') }}
            </button>
        {% endif %}

        {% for btn in customButtons %}
            <a class="btn {{ btn.cls }}" href="{{ btn.link }}" target="{{ btn.target }}">
                <i class="fa {{ btn.icon }}"></i> {{ btn.name }}
            </a>
        {% endfor %}

        {% if deleteButton %}
            <a class="btn btn-danger pull-right" data-toggle="modal" href="javascript:void(0)"
               onclick="openDeleteConfirmModal()">
                <i class="fa fa-remove"></i> {{ __('delete') }}
            </a>
        {% endif %}

        {% if resetFilterButton %}
            <a class="btn btn-info pull-left" href="{{ btn.link }}">
                <i class="fa fa-refresh"></i> {{ __('t_backend_table_template_btn_refresh') }}
            </a>
        {% endif %}

        {% if searchButton %}
            <button type="submit" form="search-form" class="btn btn-warning pull-left"
                    onclick='return document.forms["search-form"].submit();'>
                <i class="fa fa-search"></i> {{ __('search') }}
            </button>
        {% endif %}

        {% if customControls %}
            {% for control in customControls %}
                {{ control|safe }}
            {% endfor %}
        {% endif %}

        {% if toClassButton %}
            <a class="btn btn-primary pull-right" data-toggle="modal" href="javascript:void(0)"
               onclick="openToClassModal()">
                <i class="fa fa-sign-in"></i> {{ __('t_backend_table_template_admission') }}
            </a>
        {% endif %}

        {% if sendMailButton %}
            <a class="btn btn-primary pull-right" href="javascript:void(0)" id="btnSendMail" onclick="sendVerifyMail()">
                <i class="fa fa-envelope"></i>{{ __('t_backend_table_template_send_receipts') }}
            </a>
        {% endif %}

        {% if mergeClassButton %}
            <a class="btn btn-primary pull-right" href="javascript:void(0)" id="btnMergeClass"
               onclick="openMergeClassModal()">
                <i class="fa fa-compress"></i>{{ __('t_backend_table_template_pairing_class') }}
            </a>
        {% endif %}
    </div>
</div>

{% include 'delete_modal.twig' %}