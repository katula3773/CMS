{% extends 'layout.twig' %}

{% block cssExtends %}
    {#<link rel="stylesheet" href="/theme_resources/backend/default/plugins/codemirror/css/codemirror.min.css">#}
    <style>
        .widget-list {
            list-style: none;
            padding-left: 0;
            font-size: 15px;
        }

        .widget-list .box {
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
        }

        .widget-item {
            display: block;
            border: 1px solid;
            line-height: 35px;
            padding-left: 15px;
            background-color: aliceblue;
            margin-bottom: 10px;
            cursor: move;
        }

        .widget-state-hover {
            border: 1px dashed #000000;
            min-height: 50px;
        }

        .ui-sortable-placeholder {
            border: 1px dashed #000000;
            min-height: 50px;
        }

        .open {
            display: block;
        }

        .close {
            display: none;
        }

        .expand_arrow {
            position: absolute;
            top: 6px;
            right: 10px;
            width: 50px;
            font-size: 24px;
            text-align: center;
        }

        .placeholder {
            border: 1px dashed #000000;
            min-height: 50px;
            text-align: center;
        }

        .sidebar-widget {
            padding: 5px;
            min-height: 50px;
            overflow: auto;
            z-index: 9999;
        }

        .information {
            float: right;
            padding-right: 10px;
            color: #808080;
            cursor: pointer;
        }

        .information:hover i {
            color: #525252;
        }

        .tooltip.in {
            opacity: 1;
        }

        .tooltip.top {
            padding: 8px 4px 5px 4px;
        }

        .tooltip-inner {
            text-align: left;
            background-color: #f0eff0;
            color: #000000;
            border: 1px solid #d7d7d7;
        }

        .tooltip.top .tooltip-arrow {
            border-top-color: #d7d7d7;
        }

        .maximize-toolbar, .minimize-toolbar {
            border: 1px solid #ddd;
            background-color: #f7fbff;
        }

        .maximize-toolbar {
            padding: 5px 10px;
        }

        .minimize-toolbar {
            margin: -6px -12px 12px -12px;
            padding: 15px 20px;
            font-size: 20px;
        }

        .maximize-toolbar a {
            padding: 2px 5px;
        }

        .minimize-toolbar a {
            padding: 6px 6px 2px 6px;
        }

        .maximize-toolbar a:hover, .minimize-toolbar a:hover {
            background-color: #d5e1f3;
        }

        .maximize-toolbar a i, .minimize-toolbar a i {
            color: #6b6b6b;
        }

        .maximize-toolbar a:hover i, .minimize-toolbar a:hover i {
            color: #525252;
        }

        .CodeMirror.cm-s-default {
            padding: 6px 12px;
            border: 1px solid #d2d6de;
        }
    </style>
{% endblock %}

{% block content %}
    {#<div class="col-md-12">#}
    {#<div class="col-md-12">#}
    {#{% include 'toolbar.html' %}#}
    {#</div>#}
    {#</div>#}

    <div class="row">
        <div class="col-md-5">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Available Widgets</h3>
                </div>

                <div class="box-body">
                    {% macro widget_list(widget) %}
                        <li class="widget-item" data-alias="{{ widget.name }}">
                            {{ widget.title }}
                            <a class="information" title="{{ widget.description }}">
                                <i class="fa fa-info-circle"></i>
                            </a>
                        </li>
                    {% endmacro %}

                    <div class="row">
                        <div class="col-md-6">
                            <ul class="widget-list">
                                {% for index, widget in widgets %}
                                    {% if loop.index0 % 2 == 0 %}
                                        {{ widget_list(widget) }}
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>

                        <div class="col-md-6">
                            <ul class="widget-list">
                                {% for index, widget in widgets %}
                                    {% if loop.index0 % 2 != 0 %}
                                        {{ widget_list(widget) }}
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7 sidebar-list">
            <div class="row">
                {% macro sidebar_list(sidebar) %}
                    <div class="box box-solid box-info" id="{{ sidebar.name }}">
                        <div class="box-header">
                            <h3 class="box-title">{{ sidebar.title }}</h3>

                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="box-body" id="{{ sidebar.name }}">
                            <ul class="widget-list connect-list sidebar-widget">
                                {% for widget in sidebar.widgets %}
                                    <li id="{{ widget.data.id }}">
                                        <div class="widget-item">{{ widget.data.widget_name }}</div>
                                        <a href="#" class="fa fa-caret-left expand_arrow"
                                           onclick="return showDetail(this);"></a>

                                        <div class="box box-solid close">
                                            <div class="box-body">{{ widget.setting | safe }}</div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% endmacro %}

                <div class="col-md-6">
                    {% for sidebar in sidebars %}
                        {% if loop.index <= sidebars.length/2 %}
                            {{ sidebar_list(sidebar) }}
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="col-md-6">
                    {% for sidebar in sidebars %}
                        {% if loop.index > sidebars.length/2 %}
                            {{ sidebar_list(sidebar) }}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block jsExtends %}
    <script src="/backend/{{ getConfig('backendTheme') }}/assets/plugins/jQueryUI/jquery-ui.min.js"></script>
    {#<script src="/theme_resources/backend/default/plugins/codemirror/js/codemirror.min.js"></script>#}
    {#<script src="/theme_resources/backend/default/plugins/codemirror/js/codemirror.mode.htmlmixed.min.js"></script>#}
    <script src="/backend/{{ getConfig('backendTheme') }}/dist/js/pages/sidebars.js"></script>
{% endblock %}

